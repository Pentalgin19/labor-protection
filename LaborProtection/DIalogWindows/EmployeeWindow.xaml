<Window x:Class="LaborProtection.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сотрудник" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#FFF8F1E7"
        FontFamily="Segoe UI"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock x:Name="TitleTextBlock" Grid.Row="0" Text="Добавить сотрудника" 
                   FontSize="20" FontWeight="Bold" Foreground="#A67C52" 
                   Margin="0 0 0 20" HorizontalAlignment="Center"/>

        <!-- Форма -->
        <StackPanel Grid.Row="1" Margin="0 0 0 20">
            <TextBlock Text="Фамилия:" FontWeight="SemiBold" Margin="0 5 0 2"/>
            <TextBox x:Name="SurnameTextBox" Margin="0 0 0 10" Padding="5"/>

            <TextBlock Text="Имя:" FontWeight="SemiBold" Margin="0 5 0 2"/>
            <TextBox x:Name="NameTextBox" Margin="0 0 0 10" Padding="5"/>

            <TextBlock Text="Отчество:" FontWeight="SemiBold" Margin="0 5 0 2"/>
            <TextBox x:Name="PatronymicTextBox" Margin="0 0 0 10" Padding="5"/>

            <TextBlock Text="Телефон:" FontWeight="SemiBold" Margin="0 5 0 2"/>
            <TextBox x:Name="PhoneTextBox" Margin="0 0 0 10" Padding="5"/>

            <TextBlock Text="Должность:" FontWeight="SemiBold" Margin="0 5 0 2"/>
            <ComboBox x:Name="PostComboBox" Margin="0 0 0 10" Padding="5"/>

            <TextBlock Text="Отдел:" FontWeight="SemiBold" Margin="0 5 0 2"/>
            <ComboBox x:Name="DepartmentComboBox" Margin="0 0 0 10" Padding="5"/>

            <TextBlock Text="Email:" FontWeight="SemiBold" Margin="0 5 0 2"/>
            <TextBox x:Name="EmailTextBox" Margin="0 0 0 10" Padding="5"/>

            <TextBlock Text="Дата приема:" FontWeight="SemiBold" Margin="0 5 0 2"/>
            <DatePicker x:Name="EmploymentDatePicker" Margin="0 0 0 10"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Сохранить" 
                    Click="SaveButton_Click" 
                    Width="100" Height="30" 
                    Margin="0 0 10 0"
                    Background="#A67C52" 
                    Foreground="White" 
                    BorderThickness="0"
                    FontWeight="SemiBold"/>
            <Button x:Name="CancelButton" Content="Отмена" 
                    Click="CancelButton_Click" 
                    Width="100" Height="30"
                    Background="#6C757D" 
                    Foreground="White" 
                    BorderThickness="0"
                    FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window> 