<Window x:Class="LaborProtection.ExamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Проверка" Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#FFF8F1E7"
        FontFamily="Segoe UI"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock x:Name="TitleTextBlock" Grid.Row="0" Text="Добавить проверку" 
                   FontSize="20" FontWeight="Bold" Foreground="#A67C52" 
                   Margin="0 0 0 20" HorizontalAlignment="Center"/>

        <!-- Форма -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0 0 0 20">
            <StackPanel>
                <TextBlock Text="Название:" FontWeight="SemiBold" Margin="0 5 0 2"/>
                <TextBox x:Name="TitleTextBox" Margin="0 0 0 10" Padding="5"/>

                <TextBlock Text="Причина:" FontWeight="SemiBold" Margin="0 5 0 2"/>
                <ComboBox x:Name="ReasonComboBox" Margin="0 0 0 10" Padding="5"/>

                <TextBlock Text="Дата проверки:" FontWeight="SemiBold" Margin="0 5 0 2"/>
                <DatePicker x:Name="ExamDatePicker" Margin="0 0 0 10" SelectedDateChanged="ExamDatePicker_SelectedDateChanged"/>

                <TextBlock Text="Cотрудник:" FontWeight="SemiBold" Margin="0 5 0 2"/>
                <ComboBox x:Name="EmpComboBox" Margin="0 0 0 10" Padding="5"/>

                <TextBlock Text="Предыдущая дата:" FontWeight="SemiBold" Margin="0 5 0 2"/>
                <DatePicker x:Name="PrevDatePicker" Margin="0 0 0 10"/>

                <!--<TextBlock Text="Результат группы:" FontWeight="SemiBold" Margin="0 5 0 2"/>-->
                <!--<TextBox x:Name="ResGroupTextBox" Margin="0 0 0 10" Padding="5"/>-->

                <TextBlock Text="Оценка:" FontWeight="SemiBold" Margin="0 5 0 2"/>
                <ComboBox x:Name="MarkComboBox" Margin="0 0 0 10" Padding="5"/>

                <TextBlock Text="Следующая дата:" FontWeight="SemiBold" Margin="0 5 0 2"/>
                <DatePicker x:Name="NextDatePicker" Margin="0 0 0 10"/>

                <TextBlock Text="Номер:" FontWeight="SemiBold" Margin="0 5 0 2"/>
                <TextBox x:Name="NumberTextBox" Margin="0 0 0 10" Padding="5"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Сохранить" 
                    Click="SaveButton_Click" 
                    Width="100" Height="30" 
                    Margin="0 0 10 0"
                    Background="#A67C52" 
                    Foreground="White" 
                    BorderThickness="0"
                    FontWeight="SemiBold"/>
            <Button x:Name="CancelButton" Content="Отмена" 
                    Click="CancelButton_Click" 
                    Width="100" Height="30"
                    Background="#6C757D" 
                    Foreground="White" 
                    BorderThickness="0"
                    FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window> 