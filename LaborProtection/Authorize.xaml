<Window x:Class="LaborProtection.Authorize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" Height="400" Width="300"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#FFF8F1E7" FontFamily="Segoe UI">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0 10" VerticalAlignment="Center">
            <TextBlock Text="Авторизация" 
                       FontSize="22" 
                       FontWeight="Bold" 
                       Foreground="#A67C52" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <TextBlock Text="Логин" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="loginBox" Height="30" Padding="5"
                     Background="#FFFDF6F0" BorderBrush="#D2B48C" BorderThickness="1"
                     PreviewKeyDown="loginBox_PreviewKeyDown"
                     TextChanged="InputChanged"
                     />

            <TextBlock Text="Пароль" FontSize="14" Margin="0,15,0,5"/>
            <PasswordBox x:Name="passwordBox" Height="30" Padding="5"
                         Background="#FFFDF6F0" BorderBrush="#D2B48C" BorderThickness="1"
                         PreviewKeyDown="passwordBox_PreviewKeyDown"
                         PasswordChanged="InputChanged"
                         />

            <Button x:Name="loginButton"
                Content="Войти"
                    Height="35"
                    Margin="0,25,0,0"
                    Background="#DEC8A3"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    IsEnabled="False"
                    Click="Button_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#DEC8A3"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <!-- сохраняем цвет и стиль даже в неактивном состоянии -->
                                <Setter Property="Opacity" Value="1"/>
                                <Setter Property="Background" Value="#DEC8A3"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>


