<Page x:Class="LaborProtection.Pages.EmployeesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaborProtection.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Сотрудники"
      Background="#FFF8F1E7">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопки -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 20">
            <TextBlock Text="Сотрудники" FontSize="24" FontWeight="Bold" Foreground="#A67C52" VerticalAlignment="Center"/>
            <Button x:Name="AddEmployeeButton" Content="Добавить сотрудника" 
                    Click="AddEmployee_Click" 
                    Margin="20 0 0 0" 
                    Padding="15 8" 
                    Background="#A67C52" 
                    Foreground="White" 
                    BorderThickness="0"
                    FontWeight="SemiBold"/>
            <Button x:Name="ImportExcelButton" Content="Импорт из Excel"
                    Click="ImportExcelButton_Click"
                    Margin="10 0 0 0"
                    Padding="15 8"
                    Background="#6C757D"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold"/>
            <Button x:Name="ExportExcelButton" Content="Экспорт в Excel"
                    Click="ExportExcelButton_Click"
                    Margin="10 0 0 0"
                    Padding="15 8"
                    Background="#6C757D"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold"/>
        </StackPanel>

        <!-- DataGrid с сотрудниками -->
        <DataGrid x:Name="EmployeesDataGrid" 
                  Grid.Row="1" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  Background="White"
                  BorderBrush="#A67C52"
                  BorderThickness="1"
                  RowBackground="#FAFAFA"
                  AlternatingRowBackground="#F5F5F5"
                  SelectionMode="Single">
            <!--//SelectionChanged="EmployeesDataGrid_SelectionChanged">-->
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Редактировать" Click="EditEmployee_Click"/>
                    <MenuItem Header="Удалить" Click="DeleteEmployee_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id}" Width="50" IsReadOnly="True"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding surname}" Width="120"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding name}" Width="120"/>
                <DataGridTextColumn Header="Отчество" Binding="{Binding patronymic}" Width="120"/>
                <!--<DataGridTextColumn Header="Должность" Binding="{Binding post}" Width="150"/>-->
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
