<Window x:Class="LaborProtection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Учёт охраны труда" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" Background="#FFF8F1E7"
        FontFamily="Segoe UI">
    <DockPanel>
        <Grid Background="#F1E5D6">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="0" Background="#F1E5D6" Margin="10">
                <TextBlock Text="Меню" FontSize="20" FontWeight="Bold" Foreground="#A67C52" Margin="0 0 0 20"/>
                <Button Content="Сотрудники" Click="OpenEmployees" Margin="0 5" Padding="5"/>
                <Button Content="Проверки" Click="OpenExams" Margin="0 5" Padding="5"/>
                <Button Content="Отчеты" Click="OpenReports" Margin="0 5" Padding="5"/>
                <Button Content="SQL Tools" Click="OpenSqlTools" Margin="0 5" Padding="5"/>
                <Button Content="Резервное копирование" Click="OpenBackupRestore" Margin="0 5" Padding="5"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="0" Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                <TextBlock x:Name="UserInfoBlock" FontWeight="SemiBold" FontSize="14" Foreground="#A67C52" Margin="0 10 0 0" TextWrapping="Wrap"/>
                <Button Content="Выйти" Click="LogoutButton_Click" Margin="0 10 0 0" Padding="5" Background="#6C757D" Foreground="White" BorderThickness="0" FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
